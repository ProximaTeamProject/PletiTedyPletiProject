@model PletiTedyPleti.Models.Comment

@{
    ViewBag.Title = "Create";
}

<h2>Добави</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Коментар</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Body, "Съдържание:", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="control-label col-md-10">
                @Html.EditorFor(model => model.Body, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Body, "Съобщение", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostId, "Към пост:", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("PostId", null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.PostId, "", new {@class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добави" class="btn btn-default"/>
            </div>
        </div>
    </div>

    //if (IsPost)
    //{
    //    Html.RenderAction("Details", "Posts", new { id = ViewBag.PostIdNumber });

    //}
}

<div>
    @Html.ActionLink("Обратно към поста", "Details", "Posts", new { id = ViewBag.PostIdNumber}, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
