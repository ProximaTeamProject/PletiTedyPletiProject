@using Microsoft.AspNet.Identity

@model IEnumerable<PletiTedyPleti.Models.Order>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@
<br />
<br />
<p>
    @Html.ActionLink("Нова поръчка", "Create")
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.UserName)
            </td>
            <td>
                @if (User.IsInRole("Administrators"))
                {
                    @Html.ActionLink("Изтрий", "Delete", new { id = item.Id })@:|
                }
                @if (User.IsInRole("Administrators") || (item.Author != null && User.Identity.GetUserId() == item.Author.Id))
                {
                    @Html.ActionLink("Редактирай", "Edit", new { id = item.Id }) @:|
                    @Html.ActionLink("Детайли", "Details", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
